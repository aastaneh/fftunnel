FORWARDING_PORT=9999

if [[ -z "${1}" ]]; then
	echo "Usage: $0 user@hostname <other_options>"
	exit 1
fi

if [[ `uname` == 'Darwin' ]]; then
  FIREFOX="/Applications/Firefox.app/Contents/MacOS/firefox-bin -p Secure"
else
  FIREFOX="firefox -P Secure"
fi
ssh -ND $FORWARDING_PORT $@ &
PID=$!
`${FIREFOX}`
kill $PID
